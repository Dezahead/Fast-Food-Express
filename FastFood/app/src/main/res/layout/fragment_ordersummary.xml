<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    //Background
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center">




        //Screen Title text
        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:id="@+id/screentitle1"
            android:textSize="50dp"
            android:textIsSelectable="false"
            android:textAlignment="center"
            android:textColor="#fa040304"
            android:layout_marginTop="175dp"
            android:layout_below="@+id/bannerbg"
            android:layout_centerHorizontal="true" />

        //Divider between sections
        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:background="#991b1a1a"
            android:id="@+id/divider"
            android:layout_below="@+id/screentitle1"
            android:layout_centerHorizontal="true" />

        //Review order text prompt
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Please review your order and proceed to checkout to complete your order."
            android:id="@+id/summaryinstruct"
            android:textAlignment="center"
            android:maxLines="2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/screentitle1"
            android:layout_centerHorizontal="true" />

        //Order one text
        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seafood Platter"
            android:id="@+id/total"
            android:textSize="38dp"
            android:textIsSelectable="false"
            android:background="#4d1b1a1a"
            android:minHeight="52dp"
            android:minWidth="300dp"
            android:gravity="left"
            android:textColor="#fa040304"
            android:checked="true"
            android:layout_below="@+id/summaryinstruct"
            android:layout_alignParentStart="true"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true" />

        //Customization1 text
        <TextView
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tartar Sauce"
            android:id="@+id/details1"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:background="#4d1b1a1a"
            android:minHeight="30dp"
            android:minWidth="50dp"
            android:gravity="left"
            android:textColor="#fa040304"
            android:checked="true"
            android:layout_below="@+id/total"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />


        //Place order button
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Order"
            android:id="@+id/pay"
            android:fontFamily="sans-serif-light"
            android:background="#4d1b1a1a"
            android:minHeight="35dp"
            android:minWidth="100dp"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/details1"
            android:layout_alignEnd="@+id/screentitle1" />

        //Back button
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="#4d1b1a1a"
            android:id="@+id/backbutton"
            android:fontFamily="sans-serif-light"
            android:minHeight="35dp"
            android:minWidth="100dp"
            android:layout_alignTop="@+id/pay"
            android:layout_alignStart="@+id/screentitle1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_above="@+id/summaryinstruct"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>